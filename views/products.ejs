<section id="products">
    <h2>Our Products</h2>
    <table>
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Description</th>
                <!-- ... any other column headers ... -->
            </tr>
        </thead>
        <tbody>
            <% products.forEach(product => { %>
                <tr>
                    <td>
                        <a href="/products/<%= product._id %>">
                            <%= product.name %>
                        </a>
                    </td>
                    <td>$<%= product.price %></td>
                    <td><%= product.description %></td>
                    <!-- ... any other product details ... -->
                </tr>
            <% }); %>
        </tbody>
    </table>
</section>
